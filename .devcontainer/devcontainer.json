{
    "name": "Expense Manager Dev",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-azuretools.vscode-docker",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "cweijan.vscode-postgresql-client2"
            ],
            "settings": {
                "go.toolsManagement.checkForUpdates": "local",
                "go.useLanguageServer": true,
                "go.gopath": "/go",
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.shell.linux": "/bin/bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                },
                "vscode-postgres.defaultConnection": {
                    "host": "db",
                    "port": 5432,
                    "user": "postgres",
                    "password": "postgres",
                    "database": "expensemanager"
                }
            }
        }
    },

    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },

    "forwardPorts": [8080, 5432],
    
    // Download dependencies and wait for database to be ready before starting the server
    "postCreateCommand": "bash -c '/usr/local/go/bin/go mod download && sleep 5'",
    
    // Start the server in a new terminal and redirect output to a log file
    "postStartCommand": "bash -c 'go run cmd/server/main.go > /workspace/server.log 2>&1 &'",
    
    "remoteUser": "vscode",

    "remoteEnv": {
        "GOPATH": "/go",
        "GOBIN": "/go/bin",
        "PATH": "/usr/local/go/bin:/go/bin:${PATH}",
        "SHELL": "/bin/bash"
    }
} 